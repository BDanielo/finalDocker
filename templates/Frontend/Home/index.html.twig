{% extends 'base.html.twig' %}

{% block title %}
	Page d'accueil |
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="banner">
		<div class="banner-header">
			<h1 class="banner-header-title">Mini-Forum LOLoCode</h1>
		</div>
	</section>
	<section class="container latest-post mt-4">
		<h2 class="text-center">Nos derniers posts</h2>
		<a href="{{ path('app.posts.index') }}" class="btn btn-primary">Liste des posts</a>
		<div class="blog-card-list">
			{% for post in posts %}
				{% include 'Components/_card.html.twig' %}
			{% endfor %}
		</div>
	</section>
{% endblock %}
